import unittest
from library_manager.book import Book

class TestBook(unittest.TestCase):
    def test_issue(self):
        b = Book("Python", "Guido", "123")
        self.assertTrue(b.issue())

    def test_return(self):
        b = Book("Python", "Guido", "123", "issued")
        b.return_book()
        self.assertTrue(b.is_available())

if _name_ == "_main_":
    unittest.main()
